# Gacha Game Company Simulator - Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# Build Configuration
# =============================================================================

# Base URL for deployment (default: /)
# For GitHub Pages: /repository-name/
# For custom domain: /
VITE_BASE_URL=/

# Enable source maps in production (default: false)
VITE_SOURCEMAP=false

# Remove console.log statements in production (default: false)
VITE_DROP_CONSOLE=false

# =============================================================================
# Feature Flags
# =============================================================================

# Enable debug console (Shift+` in dev mode)
VITE_ENABLE_DEBUG_CONSOLE=true

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# API Configuration (if applicable)
# =============================================================================

# API endpoint for cloud saves (optional)
VITE_API_URL=

# =============================================================================
# Game Configuration
# =============================================================================

# Default difficulty mode: easy | normal | hard | expert
VITE_DEFAULT_DIFFICULTY=normal

# Enable experimental features
VITE_EXPERIMENTAL_FEATURES=false
